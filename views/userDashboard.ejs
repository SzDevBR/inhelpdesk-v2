<!-- userDashboard.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel do Usuário - Seu Site de Help Desk</title>
  <link rel="stylesheet" href="https://raw.githubusercontent.com/SzDevBR/inhelpdesk-v2/main/public/styles.css">
</head>

<body>
  <header>
    <h1>Help Desk</h1>
    <nav>
      <ul>
        <li><a href="/">Início</a></li>
        <li><a href="/user/dashboard">Painel do Usuário</a></li>
        <li><a href="/user/create-ticket">Criar Chamado</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <section class="user-info">
      <h2>Bem-vindo, <%= user.username %>!</h2>
      <p>Email: <%= user.email %></p>
    </section>

    <section class="user-tickets">
      <h3>Meus Chamados</h3>
      <% if (tickets.length === 0) { %>
        <p>Você ainda não criou nenhum chamado.</p>
      <% } else { %>
        <ul>
          <% tickets.forEach(ticket => { %>
            <li>
              <strong>Assunto:</strong> <%= ticket.subject %>
              <br>
              <strong>Status:</strong> <%= ticket.status %>
            </li>
          <% }); %>
        </ul>
      <% } %>
    </section>
  </main>

  <footer>
    <p>Todos os direitos reservados &copy; 2023</p>
  </footer>
</body>

</html>
